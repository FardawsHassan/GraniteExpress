<MudDialog>
    <DialogContent>
        <MudItem Class="pa-1">
            Are you sure you want to delete this ?
        </MudItem>
    </DialogContent>
    <DialogActions>
        <MudItem Class="px-4 pb-3">
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit" Style="margin-right: 6px;">Yes</MudButton>
            <MudButton Variant="Variant.Filled" OnClick="Cancel" Color="Color.Error">Cancel</MudButton>
        </MudItem>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}

