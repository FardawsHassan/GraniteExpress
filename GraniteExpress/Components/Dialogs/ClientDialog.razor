            </Columns>
            <PagerContent>
                <MudDataGridPager T="Client"/>
            </PagerContent>
        </MudDataGrid>
    </DialogContent>
</MudDialog>

<style>
    .mud-input.mud-input-underline::after {
        border-bottom: none;
    }

    .mud-input.mud-input-underline::before {
        border-bottom: none;
    }

    .mud-input.mud-input-underline:hover:not(.mud-disabled)::before {
        border-bottom: none;
    }

    .detailsHeader {
        background: #4b4b57;
    }
</style>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    MudTable<Client> mudtable = new();

    List<Client> Clients = new();
    Client SelectedClient = new();

    protected override async Task OnInitializedAsync()
    {
        Clients = await _clientService.GetClients();
    }

    public void RowSelected(Client client) => MudDialog.Close(DialogResult.Ok(client));
}