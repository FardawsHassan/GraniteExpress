                        <MudItem Style="min-height:40px;" @onclick=@(() => RowSelected(context.Item))>
                            <MudTextField Value="@context.Item.ClientLastName" ReadOnly Margin="Margin.Dense"></MudTextField>
                        </MudItem>
                    </CellTemplate>
